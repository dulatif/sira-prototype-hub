---
// Header Component
interface Props {
  title: string;
  subtitle?: string;
  icon?: string;
}

const { title, subtitle = '', icon = 'dashboard' } = Astro.props;
---

<header class="flex items-center justify-between px-8 py-6 border-b border-border-light dark:border-border-dark bg-white/30 dark:bg-slate-900/30 backdrop-blur-md relative z-10">
  <div class="flex items-center gap-4">
    <div class="w-12 h-12 rounded-2xl bg-primary/10 flex items-center justify-center text-primary">
      <span class="material-symbols-outlined text-2xl">{icon}</span>
    </div>
    <div>
      <h1 class="text-2xl font-bold text-slate-800 dark:text-white">{title}</h1>
      {subtitle && (
        <p class="text-sm text-slate-500 dark:text-slate-400 mt-0.5" set:html={subtitle} />
      )}
    </div>
  </div>

  <div class="flex items-center gap-4">
    <!-- Search -->
    <div class="hidden lg:flex items-center gap-2 px-4 py-2.5 rounded-xl bg-white/50 dark:bg-slate-800/50 border border-border-light dark:border-border-dark">
      <span class="material-symbols-outlined text-slate-400 text-xl">search</span>
      <input
        type="text"
        placeholder="Search..."
        class="bg-transparent outline-none text-sm text-slate-600 dark:text-slate-300 w-48 placeholder:text-slate-400"
      />
    </div>

    <!-- Notifications -->
    <button class="relative p-2.5 rounded-xl bg-white/50 dark:bg-slate-800/50 border border-border-light dark:border-border-dark text-slate-500 hover:text-primary transition-colors">
      <span class="material-symbols-outlined">notifications</span>
      <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-red-500 rounded-full"></span>
    </button>

    <!-- User Profile -->
    <div class="flex items-center gap-3 pl-4 border-l border-border-light dark:border-border-dark">
      <div class="text-right hidden sm:block">
        <p class="text-sm font-semibold text-slate-700 dark:text-slate-200">Alex M.</p>
        <p class="text-xs text-slate-400">Premium Plan</p>
      </div>
      <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary to-teal-400 flex items-center justify-center text-white font-bold text-sm">
        AM
      </div>
    </div>
  </div>
</header>
