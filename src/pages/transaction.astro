---
// Transaction Page - Grid View
import Base from "../layouts/Base.astro";
import Sidebar from "../components/Sidebar.astro";
import Header from "../components/Header.astro";
---

<Base title="Sira - Transaction Journal">
  <style>
    .glass-panel {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border: 1px solid rgba(255, 255, 255, 0.6);
    }
    .glass-card {
      background: rgba(255, 255, 255, 0.85);
      backdrop-filter: blur(8px);
      border: 1px solid rgba(255, 255, 255, 0.5);
      box-shadow:
        0 4px 6px -1px rgba(0, 0, 0, 0.02),
        0 2px 4px -1px rgba(0, 0, 0, 0.02);
    }
    .shadow-soft {
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
  </style>

  <div
    class="flex h-screen w-full overflow-hidden bg-[#f8fcfb] text-[#0f1a19] antialiased selection:bg-primary/30"
  >
    <Sidebar activePage="transaction" />

    <main
      class="flex-1 flex flex-col h-full relative overflow-hidden bg-gradient-to-br from-[#fafaf9] via-[#f2fcfb] to-[#e6f7f6]"
    >
      <Header
        title="Transaction Journal"
        subtitle="Track your finances"
        icon="book"
      />

      <div
        class="flex-1 overflow-y-auto relative p-4 md:p-8 md:pt-6 pb-20 scroll-smooth"
      >
        <div class="max-w-7xl mx-auto flex flex-col gap-6">
          <!-- Filter Bar -->
          <div
            class="sticky top-0 z-20 pt-2 pb-4 -mt-2 bg-gradient-to-b from-[#f8fcfb] via-[#f8fcfb]/90 to-transparent"
          >
            <div
              class="pointer-events-auto glass-panel p-2 rounded-2xl shadow-soft flex flex-wrap items-center gap-2 md:gap-4 overflow-x-auto mx-1 border border-white/60"
            >
              <button
                class="flex items-center gap-2 px-3 py-2 rounded-xl bg-white hover:bg-primary/5 text-slate-700 text-sm font-semibold border border-slate-100 shadow-sm transition-all whitespace-nowrap group"
              >
                <span class="material-symbols-outlined text-primary text-[20px]"
                  >calendar_month</span
                >
                <span>Jan 1 - Jan 15</span>
                <span
                  class="material-symbols-outlined text-slate-400 text-[18px] group-hover:text-primary transition-colors"
                  >expand_more</span
                >
              </button>
              <div class="w-px h-6 bg-slate-200"></div>
              <button
                class="flex items-center gap-2 px-3 py-2 rounded-xl bg-transparent hover:bg-white/80 text-slate-600 hover:text-primary text-sm font-medium transition-all whitespace-nowrap"
              >
                <span class="material-symbols-outlined text-[20px]">tune</span>
                <span>Type: All</span>
              </button>
              <button
                class="flex items-center gap-2 px-3 py-2 rounded-xl bg-transparent hover:bg-white/80 text-slate-600 hover:text-primary text-sm font-medium transition-all whitespace-nowrap"
              >
                <span class="material-symbols-outlined text-[20px]">mood</span>
                <span>Mood: All</span>
              </button>
              <button
                class="flex items-center gap-2 px-3 py-2 rounded-xl bg-transparent hover:bg-white/80 text-slate-600 hover:text-primary text-sm font-medium transition-all whitespace-nowrap"
              >
                <span class="material-symbols-outlined text-[20px]">wallet</span
                >
                <span>Wallet: Main</span>
              </button>
              <div class="flex-1"></div>
              <button
                class="hidden md:flex items-center justify-center size-8 rounded-full text-slate-400 hover:text-red-500 hover:bg-red-50 transition-colors"
              >
                <span class="material-symbols-outlined text-[20px]"
                  >restart_alt</span
                >
              </button>
            </div>
          </div>

          <!-- Main Grid -->
          <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
            <!-- Left Column - Financial Snapshot -->
            <div class="lg:col-span-5 flex flex-col gap-6 sticky top-28">
              <div class="glass-card p-6 rounded-2xl border-white/60">
                <div class="flex items-center justify-between mb-6">
                  <h3
                    class="text-slate-800 font-extrabold text-lg flex items-center gap-2"
                  >
                    <span class="material-symbols-outlined text-primary"
                      >analytics</span
                    >
                    Financial Snapshot
                  </h3>
                  <span
                    class="text-xs font-semibold text-slate-400 uppercase tracking-widest"
                    >Jan 1 - 15</span
                  >
                </div>
                <div class="space-y-4">
                  <!-- Income -->
                  <div
                    class="flex items-center justify-between p-4 rounded-xl bg-emerald-50/50 border border-emerald-100"
                  >
                    <div class="flex items-center gap-3">
                      <div
                        class="size-10 rounded-full bg-emerald-100 flex items-center justify-center text-emerald-600"
                      >
                        <span class="material-symbols-outlined"
                          >arrow_downward</span
                        >
                      </div>
                      <span class="text-slate-600 font-semibold text-sm"
                        >Income</span
                      >
                    </div>
                    <span class="font-mono font-bold text-primary text-lg"
                      >+$1,250.00</span
                    >
                  </div>
                  <!-- Expenses -->
                  <div
                    class="flex items-center justify-between p-4 rounded-xl bg-rose-50/50 border border-rose-100"
                  >
                    <div class="flex items-center gap-3">
                      <div
                        class="size-10 rounded-full bg-rose-100 flex items-center justify-center text-rose-600"
                      >
                        <span class="material-symbols-outlined"
                          >arrow_upward</span
                        >
                      </div>
                      <span class="text-slate-600 font-semibold text-sm"
                        >Expenses</span
                      >
                    </div>
                    <span class="font-mono font-bold text-slate-800 text-lg"
                      >-$469.70</span
                    >
                  </div>
                  <!-- Net Change -->
                  <div
                    class="flex items-center justify-between p-4 rounded-xl bg-primary/10 border border-primary/20"
                  >
                    <div class="flex items-center gap-3">
                      <div
                        class="size-10 rounded-full bg-primary/20 flex items-center justify-center text-primary"
                      >
                        <span class="material-symbols-outlined">balance</span>
                      </div>
                      <span class="text-slate-800 font-bold text-sm"
                        >Net Change</span
                      >
                    </div>
                    <span class="font-mono font-bold text-primary text-xl"
                      >+$780.30</span
                    >
                  </div>
                </div>
              </div>

              <!-- Category Cards -->
              <div class="grid grid-cols-2 gap-4">
                <div class="glass-card p-4 rounded-2xl">
                  <div class="flex items-center gap-2 mb-3">
                    <span class="text-lg">üéß</span>
                    <span
                      class="text-xs font-bold text-slate-500 uppercase tracking-tight"
                      >Electronics</span
                    >
                  </div>
                  <p class="font-mono text-lg font-bold text-slate-800">
                    -$319.00
                  </p>
                  <div class="w-full bg-slate-100 h-1 rounded-full mt-3">
                    <div
                      class="bg-orange-400 h-full rounded-full"
                      style="width: 68%"
                    >
                    </div>
                  </div>
                </div>
                <div class="glass-card p-4 rounded-2xl">
                  <div class="flex items-center gap-2 mb-3">
                    <span class="text-lg">ü•¶</span>
                    <span
                      class="text-xs font-bold text-slate-500 uppercase tracking-tight"
                      >Groceries</span
                    >
                  </div>
                  <p class="font-mono text-lg font-bold text-slate-800">
                    -$80.00
                  </p>
                  <div class="w-full bg-slate-100 h-1 rounded-full mt-3">
                    <div
                      class="bg-blue-400 h-full rounded-full"
                      style="width: 17%"
                    >
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Right Column - Recent Activity -->
            <div class="lg:col-span-7 flex flex-col gap-6">
              <div class="flex items-center justify-between px-2">
                <h3
                  class="text-slate-800 font-extrabold text-lg flex items-center gap-2"
                >
                  <span class="material-symbols-outlined text-primary"
                    >history</span
                  >
                  Recent Activity
                </h3>
                <button
                  class="text-sm font-bold text-primary hover:underline flex items-center gap-1"
                >
                  View All
                  <span class="material-symbols-outlined text-sm"
                    >arrow_forward</span
                  >
                </button>
              </div>

              <div class="flex flex-col gap-6">
                <!-- Today Section -->
                <div class="flex flex-col gap-3">
                  <div class="flex items-center justify-between px-2">
                    <h3
                      class="text-slate-400 font-bold text-xs uppercase tracking-wider flex items-center gap-2"
                    >
                      Today, 15 Jan
                      <span class="h-px w-6 bg-slate-200 rounded-full"></span>
                    </h3>
                    <span class="text-[10px] font-mono text-slate-400"
                      >TOTAL: <span class="text-slate-600">-$124.50</span></span
                    >
                  </div>

                  <!-- Transaction Item 1 -->
                  <div
                    class="group relative flex items-center justify-between p-3 bg-white/70 hover:bg-white rounded-xl border border-transparent hover:border-primary/20 shadow-sm transition-all duration-300 cursor-pointer"
                  >
                    <div class="flex items-center gap-3">
                      <div
                        class="size-10 rounded-full bg-[#e8f2f1] flex items-center justify-center text-xl shrink-0 group-hover:scale-105 transition-transform"
                      >
                        ‚òïÔ∏è
                      </div>
                      <div class="flex flex-col">
                        <h4
                          class="text-slate-800 font-bold text-sm group-hover:text-primary transition-colors truncate max-w-[120px] md:max-w-none"
                        >
                          Starbucks Coffee
                        </h4>
                        <span class="text-[10px] text-slate-500"
                          >10:23 AM ‚Ä¢ Food &amp; Drink</span
                        >
                      </div>
                    </div>
                    <div class="flex items-center gap-3">
                      <div
                        class="px-2 py-0.5 rounded-full bg-teal-50 border border-teal-100 text-teal-600 text-[9px] font-extrabold tracking-wide uppercase"
                      >
                        HEALING
                      </div>
                      <span class="font-mono font-bold text-slate-800 text-sm"
                        >-$5.50</span
                      >
                    </div>
                  </div>

                  <!-- Transaction Item 2 -->
                  <div
                    class="group relative flex items-center justify-between p-3 bg-white/70 hover:bg-white rounded-xl border border-transparent hover:border-primary/20 shadow-sm transition-all duration-300 cursor-pointer"
                  >
                    <div class="flex items-center gap-3">
                      <div
                        class="size-10 rounded-full bg-emerald-50 flex items-center justify-center text-xl shrink-0 group-hover:scale-105 transition-transform"
                      >
                        üíº
                      </div>
                      <div class="flex flex-col">
                        <h4
                          class="text-slate-800 font-bold text-sm group-hover:text-primary transition-colors truncate max-w-[120px]"
                        >
                          Client Payment #204
                        </h4>
                        <span class="text-[10px] text-slate-500"
                          >09:15 AM ‚Ä¢ Freelance</span
                        >
                      </div>
                    </div>
                    <div class="flex items-center gap-3">
                      <div
                        class="px-2 py-0.5 rounded-full bg-emerald-100 border border-emerald-200 text-emerald-700 text-[9px] font-extrabold tracking-wide uppercase"
                      >
                        CUAN
                      </div>
                      <span class="font-mono font-bold text-primary text-sm"
                        >+$1,200.00</span
                      >
                    </div>
                  </div>

                  <button
                    class="flex items-center justify-center py-2 text-slate-400 hover:text-primary text-xs font-semibold gap-1 transition-colors border-t border-slate-100 mt-1"
                  >
                    <span class="material-symbols-outlined text-[16px]"
                      >expand_more</span
                    >
                    View 1 more today
                  </button>
                </div>

                <!-- Yesterday Section -->
                <div class="flex flex-col gap-3">
                  <div class="flex items-center justify-between px-2">
                    <h3
                      class="text-slate-400 font-bold text-xs uppercase tracking-wider flex items-center gap-2"
                    >
                      Yesterday, 14 Jan
                      <span class="h-px w-6 bg-slate-200 rounded-full"></span>
                    </h3>
                    <span class="text-[10px] font-mono text-slate-400"
                      >TOTAL: <span class="text-slate-600">-$45.20</span></span
                    >
                  </div>

                  <!-- Transaction Item 3 -->
                  <div
                    class="group relative flex items-center justify-between p-3 bg-white/70 hover:bg-white rounded-xl border border-transparent hover:border-primary/20 shadow-sm transition-all duration-300 cursor-pointer"
                  >
                    <div class="flex items-center gap-3">
                      <div
                        class="size-10 rounded-full bg-slate-100 flex items-center justify-center text-xl shrink-0 group-hover:scale-105 transition-transform"
                      >
                        üöï
                      </div>
                      <div class="flex flex-col">
                        <h4
                          class="text-slate-800 font-bold text-sm group-hover:text-primary transition-colors"
                        >
                          Uber Ride
                        </h4>
                        <span class="text-[10px] text-slate-500"
                          >06:30 PM ‚Ä¢ Transport</span
                        >
                      </div>
                    </div>
                    <div class="flex items-center gap-3">
                      <div
                        class="px-2 py-0.5 rounded-full bg-rose-100 border border-rose-200 text-rose-700 text-[9px] font-extrabold tracking-wide uppercase"
                      >
                        MAGER
                      </div>
                      <span class="font-mono font-bold text-slate-800 text-sm"
                        >-$15.20</span
                      >
                    </div>
                  </div>

                  <!-- Transaction Item 4 -->
                  <div
                    class="group relative flex items-center justify-between p-3 bg-white/70 hover:bg-white rounded-xl border border-transparent hover:border-primary/20 shadow-sm transition-all duration-300 cursor-pointer"
                  >
                    <div class="flex items-center gap-3">
                      <div
                        class="size-10 rounded-full bg-blue-50 flex items-center justify-center text-xl shrink-0 group-hover:scale-105 transition-transform"
                      >
                        ü•¶
                      </div>
                      <div class="flex flex-col">
                        <h4
                          class="text-slate-800 font-bold text-sm group-hover:text-primary transition-colors"
                        >
                          Whole Foods
                        </h4>
                        <span class="text-[10px] text-slate-500"
                          >04:15 PM ‚Ä¢ Groceries</span
                        >
                      </div>
                    </div>
                    <div class="flex items-center gap-3">
                      <div
                        class="px-2 py-0.5 rounded-full bg-slate-100 border border-slate-200 text-slate-600 text-[9px] font-extrabold tracking-wide uppercase"
                      >
                        ESSENTIAL
                      </div>
                      <span class="font-mono font-bold text-slate-800 text-sm"
                        >-$80.00</span
                      >
                    </div>
                  </div>

                  <button
                    class="flex items-center justify-center py-2 text-slate-400 hover:text-primary text-xs font-semibold gap-1 transition-colors border-t border-slate-100 mt-1"
                  >
                    <span class="material-symbols-outlined text-[16px]"
                      >expand_more</span
                    >
                    View 1 more yesterday
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Mobile FAB -->
      <button
        class="md:hidden fixed bottom-6 right-6 size-14 rounded-full bg-primary text-white shadow-lg flex items-center justify-center z-50"
      >
        <span class="material-symbols-outlined">add</span>
      </button>
    </main>
  </div>
</Base>
